{
  "enabled": true,
  "check_interval_seconds": 60,
  "log_stats_interval_minutes": 60,
  "persist_stats": false,
  "stats_file": "scheduler_stats.json",
  "messages": [
    {
      "id": "status-beacon",
      "text": "Automated status beacon - System operational",
      "interval": "30 minutes",
      "enabled": true
    },
    {
      "id": "daily-checkin",
      "text": "Daily system check-in from MeshLink scheduler",
      "interval": "24 hours",
      "enabled": true
    },
    {
      "id": "hourly-ping",
      "text": "Hourly ping from automated scheduler",
      "interval": "1 hour",
      "enabled": false
    }
  ]
}